<div class="container col-lg-4">
	<div class="row justify-content-center">
		<img src="https://st3.depositphotos.com/1007168/14192/v/950/depositphotos_141921256-stock-illustration-burger-cartoon-character.jpg" alt="Girl in a jacket" width="300" height="300">
	</div>
	<h1 class="row justify-content-center">Burgers to the Moon!</h1>

<div class="row">
  <div class="col-lg-6 c">
    <h2>Burgers I hate</h2>
    <ul>
      {{#each burgers}}
      {{#unless good}}
      {{> burgers/burger-block good=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div class="col-lg-6 c">
    <h2>Yummy Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#if good}}
      {{> burgers/burger-block good=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


  <form id="create-form">

    <div class="form-group d">
      <label for="bu">Enter a Burger:</label>
      <input type="text" id="bu" name="name">
    </div>

    <div class="form-group d">
      <label for="slee">Yummy?</label><br>
      <input type="radio" name="good" value="1" checked id="good"> Super Yummy<br>
      <input type="radio" name="good" value="0" id="notGood"> No way
    </div>
    <div class="text-center">
      <button class="" type="submit">Add a new burger</button>
    </div>
  </form>



</div>